generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id      String   @id @default(cuid())
  name    String
  price   Float
  descrip String?
  image String
}



model User {
  id      String   @id @default(cuid())
  name    String
  email   String
  password String
  companyId String
}